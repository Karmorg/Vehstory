<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet  author="Karmo"  id="changelog-1.0">

        <createTable  tableName="client">
            <column  name="id"  type="BigInt" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="name"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="e_mail"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
        </createTable>

        <createTable  tableName="vehicle">
            <column  name="id"  type="BigInt" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="client_id"  type="BigInt" >
                <constraints  nullable="false"  foreignKeyName="fk_client_id"  references="client(id)" unique="false"/>
            </column>
            <column  name="reg_No"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="odo"  type="BigInt" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="type"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="manufacturer"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="model"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="year"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="fuel"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="kw"  type="BigInt" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
        </createTable>

        <createTable  tableName="service_list">
            <column  name="id"  type="BigInt" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="service"  type="TEXT" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2.0" author="Karmo">
        <createTable  tableName="selected_service">
            <column  name="id"  type="BigInt" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="vehicle_id"  type="BigInt" >
                <constraints  nullable="false"  primaryKey="false"  unique="false" foreignKeyName="fk_vehicle_id_to_service"  references="vehicle(id)" />
            </column>
            <column  name="service_id"  type="BigInt" >
                <constraints  nullable="false" primaryKey="false"  unique="false" foreignKeyName="fk_service_id"  references="service_list(id)" />
            </column>
            <column  name="p_unit"  type="TEXT" >
                <constraints  nullable="true"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="p_value"  type="BigInt" >
                <constraints  nullable="true"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="comment"  type="TEXT" >
                <constraints  nullable="true"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="active"  type="boolean" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
        </createTable>

        <createTable  tableName="service_history">
            <column  name="id"  type="BigInt" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="log_date"  type="date" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="vehicle_id"  type="BigInt"  >
                <constraints  nullable="false" primaryKey="false"  unique="false" foreignKeyName="fk_vehicle_id"  references="vehicle(id)" />
            </column>
            <column  name="service_id"  type="BigInt" >
                <constraints  nullable="false" primaryKey="false"  unique="false" foreignKeyName="fk_service_id_tohistory"  references="service_list(id)" />
            </column>
            <column  name="service_date"  type="date" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="c_odo"  type="BigInt" >
                <constraints  nullable="true"  primaryKey="false"  unique="false"/>
            </column>
            <column  name="comment"  type="TEXT" >
                <constraints  nullable="true"  primaryKey="false"  unique="false" />
            </column>
            <column  name="active"  type="boolean" >
                <constraints  nullable="false"  primaryKey="false"  unique="false"/>
            </column>

        </createTable>
    </changeSet>


</databaseChangeLog> 